<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:textSize="10sp"
        android:id="@+id/add_btn"
        android:text="Add"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/remove_btn"/>

    <Button
        android:textSize="10sp"
        android:id="@+id/remove_btn"
        android:text="Remove"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/add_btn"
        app:layout_constraintRight_toLeftOf="@id/replace_btn"/>

    <Button
        android:textSize="10sp"
        android:id="@+id/replace_btn"
        android:text="Replace"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/remove_btn"
        app:layout_constraintRight_toLeftOf="@id/hide_btn"/>
    <Button
        android:textSize="10sp"
        android:id="@+id/hide_btn"
        android:text="Hide"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/replace_btn"
        app:layout_constraintRight_toLeftOf="@id/show_btn"/>
    <Button
        android:textSize="10sp"
        android:id="@+id/show_btn"
        android:text="Show"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/hide_btn"
        app:layout_constraintRight_toRightOf="parent"/>

    <LinearLayout
        android:id="@+id/container"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/add_btn"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>